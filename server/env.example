# Database
MONGODB_URI=mongodb://127.0.0.1:27017/compassion

# Server Configuration
PORT=3001
ORIGIN=http://localhost:8080
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_EXPIRES_IN=1h

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-me-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Email / SMTP (optional for password reset emails)
# You may use either EMAIL_* or SMTP_* naming. Both are supported.
# Gmail example:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=465
# EMAIL_SECURE=true            # true for 465 (SSL), false for 587 (TLS)
# EMAIL_USER=yourapp@gmail.com
# EMAIL_PASS=your_app_password  # Use Google App Passwords, NOT your regular password
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
MAIL_FROM="Care Connect <no-reply@careconnect.local>"

